  "dependencies": {
    "async-rollback": "0.0.1",
    "body-parser": "~1.16.0",
    "cors": "~2.8.1",
    "deasync": "^0.1.9",
    "express": "4.x",
    "istanbul": "^0.4.5",
    "joi": "^10.3.0",
    "jsonwebtoken": "^7.2.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "log4js": "^1.1.0",
    "mongoose": "latest",
    "morgan": "latest",
    "node-rest-client": "2.0.1",
